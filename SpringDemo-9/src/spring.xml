<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">
               
     <context:annotation-config/> 
     

 	<bean id="triangle" class="org.basicannotations.example.Triangle" >
 		<property name="pointA" ref="zeroPoint" />
 		
 	</bean>
 	
 	<bean id="zeroPoint" class="org.basicannotations.example.Point">
 		<property name="x" value="0" />
 		<property name="y" value="0" />
 	</bean>
 	
 	<!-- Using Qualifier to autowire to bean, in-case if we want autowire but we cannot change the name
 	of the bean, then we can use qualifier to match the name using qualifier tag  -->
 	<bean id="point2" class="org.basicannotations.example.Point">
 		<qualifier value="pointBRelated"></qualifier>
 		<property name="x" value="-20" />
 		<property name="y" value="0" />
 	</bean>
 	
 	<!-- Changing the name of bean to match with name in triangle to do autowiring by name -->
 	<bean id="pointC" class="org.basicannotations.example.Point">
 		<property name="x" value="0" />
 		<property name="y" value="20" />
 	</bean>
 	<!-- Instead of adding post processors, we can use <context:annotation-config/> which is defined at 
 	the top, it will take care of all post processors -->
 	<!--  <bean class="org.springframework.beans.factory.annotation.RequiredAnnotationBeanPostProcessor"></bean> -->
 	<!-- bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"></bean> -->
 	
 </beans>
