<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
 
 <beans>
 	<bean id="triangle" class="org.constructorinjecton.example.Triangle" >
 	<!-- Usage of constructor injection -->
 	<!-- Type here specifies which constructor to call based on the type of value set below -->
 	<constructor-arg type="java.lang.String" value="Equilateral" />
 	<constructor-arg type="int" value="20" />
 	
 	<!--  You can also set the value based on the index, index with 0 -assigned to first arg & 1 to second
 	<constructor-arg index = "0" value="Equilateral" />
 	<constructor-arg index = "1" value="20" />-->
 	</bean>
 </beans>
